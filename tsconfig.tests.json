{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["es2020", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist-tests",
    "noEmitOnError": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/lib/analysis.ts",
    "src/lib/mock-service.ts",
    "src/mocks/**/*.ts",
    "tests/**/*.ts"
  ]
}
